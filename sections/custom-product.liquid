{%- liquid
  assign fetch_priority = 'auto'
-%}
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<div class="section-custom_product section-{{ section.id }}-padding">
  <div class="page-width">
    <div
      class="wrapper-custom_product isolate{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
      {% if section.settings.border_color != blank %}
        style="border-color: {{ section.settings.border_color }}"
      {% endif %}
    >
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'title' %}
            {% if block.settings.heading != blank %}
              <div
                class="title-custom_product center"
                {% if block.settins.text_color != blank %}
                  style="color: {{ block.settings.text_color }}"
                {% endif %}
              >
                {{ block.settings.heading }}
              </div>
            {% endif %}
          {% when 'icon' %}
            <div class="icon_list-custom_product">
              {% for i in (1..3) %}
                <div
                  class="icon-custom_product{% if block.settings.icon == blank %} icon-empty{% endif %}"
                  style="max-width: {{ section.settings.icon_width }}px"
                >
                  {% capture icon %} icon{{ forloop.index }} {% endcapture %}
                  {% if block.settings[icon] != blank %}
                    {%- assign fetch_priority = 'auto' -%}
                    {%- assign widths = '165, 360, 535, 750, 1070, 1500' -%}
                    {%- capture sizes -%}
                        (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
                        (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
                        {%- endcapture -%}

                    {{
                      block.settings[icon]
                      | image_url: width: 1500
                      | image_tag: sizes: sizes, widths: widths, fetchpriority: fetch_priority
                    }}
                  {% endif %}
                </div>
              {% endfor %}
            </div>
          {% when 'image' %}
            <div class="media-custom_product">
              {% if block.settings.image != blank %}
                {%- assign fetch_priority = 'auto' -%}
                {%- assign widths = '165, 360, 535, 750, 1070, 1500' -%}
                {%- capture sizes -%}
                        (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
                        (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
                        {%- endcapture -%}

                {{
                  block.settings.image
                  | image_url: width: 1500
                  | image_tag: sizes: sizes, widths: widths, fetchpriority: fetch_priority
                }}
              {% else %}
                {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
              {% endif %}
            </div>
          {% when 'button' %}
            {% style %}
              #shopify-section-{{ section.id }} .button:after {
                box-shadow: 0 0 0 calc(var(--buttons-border-width) + var(--border-offset)) rgba(var(--color-button-text), var(--border-opacity)), 0 0 0 var(--buttons-border-width) {{ block.settings.btn_bg }};
              }
              #shopify-section-{{ section.id }} .button:hover:after {
                box-shadow: 0 0 0 calc(var(--buttons-border-width) + var(--border-offset)) rgba(255,255,255, calc(1 - 1.0 )), 0 0 0 calc(var(--buttons-border-width) + 1px) {{ block.settings.btn_bg }};
                --border-offset: 1.3px;
              }
            {% endstyle %}
            {% if block.settings.button_text != blank %}
              <div class="button-custom_product center">
                <a
                  {% if block.settings.button_url == blank %}
                    role="link" aria-disabled="true"
                  {% else %}
                    href="{{ block.settings.button_url }}"
                  {% endif %}
                  class="button button--primary second-font"
                  style="{% if block.settings.btn_bg != blank %}background-color: {{ block.settings.btn_bg }};{% endif %}{% if block.settings.btn_color %} color: {{ block.settings.btn_color }}{% endif %}"
                >
                  {{ block.settings.button_text | escape }}
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512">
                    <path fill="currentColor" d="M278.6 233.4c12.5 12.5 12.5 32.8 0 45.3l-160 160c-12.5 12.5-32.8 12.5-45.3 0s-12.5-32.8 0-45.3L210.7 256 73.4 118.6c-12.5-12.5-12.5-32.8 0-45.3s32.8-12.5 45.3 0l160 160z"></path>
                  </svg>
                </a>
              </div>
            {% endif %}
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Custom Product",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "color",
      "id": "border_color",
      "label": "Border Color",
      "default": "#ffa726"
    },
    {
      "type": "range",
      "id": "icon_width",
      "label": "Icon Width",
      "min": 30,
      "max": 130,
      "step": 1,
      "default": 50,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 10
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 0
    }
  ],
  "blocks": [
    {
      "type": "title",
      "name": "Title",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "heading",
          "label": "Heading",
          "default": "Sch√ºtzen Sie sich mit einem Wasserfilter!"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text Color",
          "default": "#3c3c3c"
        }
      ]
    },
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "url",
          "label": "URL"
        }
      ]
    },
    {
      "type": "icon",
      "name": "Icon",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon1",
          "label": "Icon1"
        },
        {
          "type": "image_picker",
          "id": "icon2",
          "label": "Icon2"
        },
        {
          "type": "image_picker",
          "id": "icon3",
          "label": "Icon3"
        }
      ]
    },
    {
      "type": "button",
      "name": "Button",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Wasserfilter kaufen"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "Button URL"
        },
        {
          "type": "color",
          "id": "btn_color",
          "label": "Button Color",
          "default": "#fff"
        },
        {
          "type": "color",
          "id": "btn_bg",
          "label": "Button Background Color",
          "default": "#ffa726"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Product",
      "blocks": [
        {
          "type": "title"
        },
        {
          "type": "icon"
        },
        {
          "type": "image"
        },
        {
          "type": "button"
        }
      ]
    }
  ]
}
{% endschema %}
