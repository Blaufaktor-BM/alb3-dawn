{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  #shopify-section-{{ section.id }} a {
    color: {{ section.settings.link_color }};
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<div class="section-question-list section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="wrapper-question-list isolate{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
      {% if section.settings.heading != blank %}
        <{{ section.settings.heading_tag }}
          class="heading-question-list {{ section.settings.heading_size }}{% if section.settings.heading_second_font %} second-font{% endif %}"
          style="color: {{ section.settings.heading_color }}; font-weight: {{ section.settings.heading_weight }};"
        >
          {% if section.settings.enable_icon != blank %}
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
              <path fill="currentColor" d="M288 64c0 17.7-14.3 32-32 32L32 96C14.3 96 0 81.7 0 64S14.3 32 32 32l224 0c17.7 0 32 14.3 32 32zm0 256c0 17.7-14.3 32-32 32L32 352c-17.7 0-32-14.3-32-32s14.3-32 32-32l224 0c17.7 0 32 14.3 32 32zM0 192c0-17.7 14.3-32 32-32l384 0c17.7 0 32 14.3 32 32s-14.3 32-32 32L32 224c-17.7 0-32-14.3-32-32zM448 448c0 17.7-14.3 32-32 32L32 480c-17.7 0-32-14.3-32-32s14.3-32 32-32l384 0c17.7 0 32 14.3 32 32z"/>
            </svg>
          {% endif %}
          {{ section.settings.heading }}
        </{{ section.settings.heading_tag }}>
      {% endif %}
      {% if section.blocks.size > 0 %}
        <div
          class="question-list{% if section.settings.enable_second_font %} second-font{% endif %}"
          style="color: {{ section.settings.content_color }}"
        >
          <ol>
            {% for block in section.blocks %}
              <li id="{{ block.settings.id }}" class="item-question rte">
                {{ block.settings.text }}
              </li>
            {% endfor %}
          </ol>
        </div>
      {% endif %}
    </div>
  </div>
</div>
