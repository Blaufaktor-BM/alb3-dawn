        "heading_cKta9U": {
          "type": "heading",
          "settings": {
            "heading": "<p>Warum Wasser filtern? 5 Top-Gründe<\/p>",
            "remove_spacing": false,
            "color": "{{ shop.brand.colors.primary[0].background }}",
            "heading_tag": "h2",
            "heading_size": "h2",
            "font_weight": "700",
