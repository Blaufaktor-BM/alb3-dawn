{%- if section.blocks.size > 0 -%}
  {{ 'component-slider.css' | asset_url | stylesheet_tag }}
  <div class="section-image_text_list color-{{ section.settings.color_scheme }} gradient">
    <div class="page-width">
      <div class="wrapper-image_text_list swiper-container isolate{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        <div
          class="slider-image_text-list swiper-wrapper"
        >
          {%- for block in section.blocks -%}
            <div
              class="item-image_text_list swiper-slide"
            >
              <div class="wrapper-item_image_text_list">
                {%- if block.settings.image != blank -%}
                  {%- assign widths = '165, 360, 535, 750, 1070, 1500' -%}
                  {%- capture sizes -%}
                      (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
                      (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
                    {%- endcapture -%}

                  {{
                    block.settings.image
                    | image_url: width: 1500
                    | image_tag: sizes: sizes, widths: widths, fetchpriority: fetch_priority
                  }}
                {%- endif -%}
                {% if block.settings.text != blank %}
                  <div class="text-image_text_list">{{ block.settings.text }}</div>
                {% endif %}
              </div>
            </div>
          {%- endfor -%}
        </div>
      </div>
    </div>
  </div>
{%- endif -%}
<script>
  $(document).ready(function () {
    new Swiper('#shopify-section-{{ section.id }} .wrapper-image_text_list.swiper-container', {
        loop: false,
        slidesPerView: 3,
        speed: 1500,
        direction: 'horizontal',
        autoplay: {
            delay: {{ section.settings.slide_speed | times: 1000 |  split: "." | first }},
            disableOnInteraction: false,
        },
        breakpoints: {
            749: {
                loop: true,
                slidesPerView: 1,
            },
        },
    });
  });
</script>
{% schema %}
{
  "name": "Image Text List",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "max_blocks": 3,
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "slide_speed",
      "label": "Slide Speed",
      "min": 1,
      "max": 9,
      "step": 0.1,
      "unit": "s",
      "default": 2
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
