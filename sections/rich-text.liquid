        {
          "type": "checkbox",
          "id": "remove_spacing",
          "label": "Remove Spacing"
        },
        {
          "type": "color",
          "id": "color",
          "label": "Color",
          "default": "#003e5f"
        },
        {
          "type": "select",
          "id": "heading_tag",
          "options": [
            {
              "value": "h1",
              "label": "H1"
            },
            {
              "value": "h2",
              "label": "H2"
            },
            {
              "value": "h3",
              "label": "H3"
            },
            {
              "value": "h4",
              "label": "H4"
            }
          ],
          "default": "h2",
          "label": "Heading Tag"
