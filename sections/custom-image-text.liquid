{%- liquid
  assign fetch_priority = 'auto'
-%}
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  #shopify-section-{{ section.id }} .button:after {
    box-shadow: 0 0 0 calc(var(--buttons-border-width) + var(--border-offset)) rgba(var(--color-button-text), var(--border-opacity)), 0 0 0 var(--buttons-border-width) {{ section.settings.btn_bg }};
  }
  #shopify-section-{{ section.id }} .button:hover:after {
    box-shadow: 0 0 0 calc(var(--buttons-border-width) + var(--border-offset)) rgba(255,255,255, calc(1 - 1.0 )), 0 0 0 calc(var(--buttons-border-width) + 1px) {{ section.settings.btn_bg }};
    --border-offset: 1.3px;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<div class="section-custom_image_text section-{{ section.id }}-padding">
  <div
    {% if section.settings.background_color != blank %}
      style="background-color: {{ section.settings.background_color }}"
    {% endif %}
  >
    <div class="page-width">
      <div
        class="wrapper-custom_image_text{% if section.settings.image_contain %} image_contain{% endif %}{% if section.settings.small_content_image %} small-content-image{% endif %}{% if section.settings.remove_content_spacing %} remove_content_spacing{% endif %}{% if section.settings.top_radius %} top_radius{% endif %}{% if section.settings.row_reverse %} row_reverse{% endif %} isolate{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
        {% if section.settings.content_bg != blank %}
          style="background-color: {{ section.settings.content_bg }}"
        {% endif %}
      >
        <div class="media-custom_image_text">
          {%- if section.settings.image != blank -%}
            {%- assign widths = '198, 432, 642, 900, 1284, 1800' -%}
            {%- capture sizes -%}
                (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 1.6667 }}px,
                (min-width: 750px) calc((100vw - 130px) / 1.667), calc((100vw - 50px) / 1.667)
            {%- endcapture -%}
            {{
              section.settings.image
              | image_url: width: 1500
              | image_tag: sizes: sizes, widths: widths, fetchpriority: fetch_priority
            }}
          {%- else -%}
            {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
        </div>
        {%- if section.blocks.size > 0 -%}
          <div class="main-custom-image_text">
            <div class="content-custom-image_text">
              {%- if section.settings.content_image != blank -%}
                <div class="media_content-custom_image_text">
                  {%- assign widths = '165, 360, 535, 750, 1070, 1500' -%}
                  {%- capture sizes -%}
                      (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
                      (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
                  {%- endcapture -%}
                  {{
                    section.settings.content_image
                    | image_url: width: 1500
                    | image_tag: sizes: sizes, widths: widths, fetchpriority: fetch_priority
                  }}
                </div>
              {%- endif -%}
              <div class="content_wrapper-custom_image_text">
                {%- for block in section.blocks -%}
                  {% case block.type %}
                    {%- when 'heading' -%}
                      <h2
                        class="custom_image_text-heading inline-richtext {{ block.settings.heading_size }}"
                        {{ block.shopify_attributes }}
                        style="color: {{ section.settings.heading_color }};"
                      >
                        {{ block.settings.heading }}
                      </h2>
                    {%- when 'subtitle' -%}
                      <p
                        class="custom_image_text-subtitle second-font"
                        {{ block.shopify_attributes }}
                        style="color: {{ section.settings.subtitle_color }};"
                      >
                        {{ block.settings.subtitle }}
                      </p>
                    {%- when 'text' -%}
                      <div
                        class="custom_image_text-text second-font rte {{ block.settings.text_style }}"
                        style="color: {{ section.settings.text_color }}"
                        {{ block.shopify_attributes }}
                      >
                        {{ block.settings.text }}
                      </div>
                    {%- when 'button' -%}
                      <div class="custom_image_text-btns">
                        {%- if block.settings.button_label1 != blank -%}
                          <a
                            {% if block.settings.button_link1 == blank %}
                              role="link" aria-disabled="true"
                            {% else %}
                              href="{{ block.settings.button_link1 }}"
                            {% endif %}
                            class="button button--primary"
                            style="color: {{ section.settings.btn_color }}; background-color: {{ section.settings.btn_bg }}"
                            {{ block.shopify_attributes }}
                          >
                            {{ block.settings.button_label1 | escape }}
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512">
                              <path fill="currentColor" d="M0 24C0 10.7 10.7 0 24 0H69.5c22 0 41.5 12.8 50.6 32h411c26.3 0 45.5 25 38.6 50.4l-41 152.3c-8.5 31.4-37 53.3-69.5 53.3H170.7l5.4 28.5c2.2 11.3 12.1 19.5 23.6 19.5H488c13.3 0 24 10.7 24 24s-10.7 24-24 24H199.7c-34.6 0-64.3-24.6-70.7-58.5L77.4 54.5c-.7-3.8-4-6.5-7.9-6.5H24C10.7 48 0 37.3 0 24zM128 464a48 48 0 1 1 96 0 48 48 0 1 1 -96 0zm336-48a48 48 0 1 1 0 96 48 48 0 1 1 0-96z"></path>
                            </svg>
                          </a>
                        {%- endif -%}
                        {%- if block.settings.button_label2 != blank -%}
                          <a
                            class="btn-second second-font"
                            href="{{ block.settings.button_link2 }}"
                            style="color: {{ section.settings.second_btn_color }}"
                          >
                            {{- block.settings.button_label2 -}}
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512">
                              <path fill="currentColor" d="M278.6 233.4c12.5 12.5 12.5 32.8 0 45.3l-160 160c-12.5 12.5-32.8 12.5-45.3 0s-12.5-32.8 0-45.3L210.7 256 73.4 118.6c-12.5-12.5-12.5-32.8 0-45.3s32.8-12.5 45.3 0l160 160z"/>
                            </svg>
                          </a>
                        {%- endif -%}
                      </div>
                    {%- when 'icon_text_acc' -%}
                      <div class="custom-image-text__icon-text-acc">
                        <details
                          id="Details-{{ block.id }}-{{ section.id }}"
                        >
                          <summary
                            id="Summary-{{ block.id }}-{{ section.id }}"
                          >
                            <div class="accordion__title inline-richtext second-font">
                              {{ block.settings.heading | default: block.settings.page.title | escape }}
                            </div>
                            {% render 'icon-caret' %}
                          </summary>
                          <div
                            class="accordion__content rte second-font"
                            id="CollapsibleAccordion-{{ block.id }}-{{ section.id }}"
                            role="region"
                            aria-labelledby="Summary-{{ block.id }}-{{ section.id }}"
                          >
                            {% for i in (1..10) %}
                              {% capture image %}image{{ i }}{% endcapture %}
                              {% capture text %}text{{ i }}{% endcapture %}
                              {% if block.settings[text] != blank %}
                                <div class="icon_text_acc-item">
                                  {% if block.settings[image] != blank %}
                                    <div
                                      class="icon_text_acc-media"
                                      style="max-width: {{ block.settings.image_width }}px"
                                    >
                                      {%- assign widths = '165, 360, 535, 750, 1070, 1500' -%}
                                      {%- capture sizes -%}
                                                        (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
                                                        (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
                                                    {%- endcapture -%}
                                      {{
                                        block.settings[image]
                                        | image_url: width: 1500
                                        | image_tag: sizes: sizes, widths: widths, fetchpriority: fetch_priority
                                      }}
                                    </div>
                                  {% endif %}
                                  <div class="icon_text_acc-text rte">{{ block.settings[text] }}</div>
                                </div>
                              {% endif %}
                            {% endfor %}
                          </div>
                        </details>
                      </div>
                    {%- when 'text_acc' -%}
                      <div class="custom-image-text__text-acc">
                        <details
                          id="Details-{{ block.id }}-{{ section.id }}"
                        >
                          <summary
                            id="Summary-{{ block.id }}-{{ section.id }}"
                          >
                            <div class="accordion__title inline-richtext second-font">
                              {{ block.settings.heading | escape }}
                            </div>
                            {% render 'icon-caret' %}
                          </summary>
                          <div
                            class="accordion__content rte second-font"
                            id="CollapsibleAccordion-{{ block.id }}-{{ section.id }}"
                            role="region"
                            aria-labelledby="Summary-{{ block.id }}-{{ section.id }}"
                          >
                            {% if block.settings.top_text != blank %}
                              <div class="top-text rte">
                                {{ block.settings.top_text }}
                              </div>
                            {% endif %}
                            {% if block.settings.bottom_text != blank %}
                              <div class="bottom-text rte">
                                {{ block.settings.bottom_text }}
                              </div>
                            {% endif %}
                          </div>
                        </details>
                      </div>
                    {%- when 'icon_text' -%}
