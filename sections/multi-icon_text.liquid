                      >
                        {{ block.settings.heading }}
                      </{{ section.settings.item_heading_tag }}>
                    {% endif %}
                    {% if block.settings.text != blank %}
                      <div
                        class="text-multi_icon_text rte{% if section.settings.item_textsecond_font %} second-font{% endif %}"
                        {% if section.settings.item_text_color != blank %}
                          style="color: {{ section.settings.item_text_color }}"
                        {% endif %}
                      >
                        {{ block.settings.text }}
                      </div>
                    {% endif %}
                  </div>
                </div>
              {% endif %}
            {% endfor %}
          </div>
        </div>
      {% else %}
        {% if section.settings.subtitle1 != blank or section.settings.subtitle2 != blank %}
          <div class="multi_icon_text_subtitles">
            {% if section.settings.subtitle1 != blank %}
              <{{ section.settings.subtitle_tag }}
                class="multi_icon_text_subtitle {{ section.settings.subtitle_size }}{% if section.settings.subtitle_second_font %} second-font{% endif %}"
                {% if section.settings.subtitle_color != blank %}
                  style="color: {{ section.settings.subtitle_color }}"
                {% endif %}
              >
                {{ section.settings.subtitle1 }}
              </{{ section.settings.subtitle_tag }}>
            {% endif %}
            {% if section.settings.subtitle2 != blank and section.settings.column_count == '2' %}
              <{{ section.settings.subtitle_tag }}
