{%- liquid
  assign fetch_priority = 'auto'
-%}
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<div
  class="section-{{ section.id }}-padding isolate{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
  {% if section.settings.bg != blank %}
    style="background-color: {{ section.settings.bg }}"
  {% endif %}
>
  <div class="page-width">
    <div class="wrapper-multi_icon_text column{{ section.settings.column_count }}">
      {% if section.settings.heading != blank %}
        <{{ section.settings.heading_tag }}
          class="heading-multi_icon_text {{ section.settings.heading_size }}{% if section.settings.heading_second_font %} second-font{% endif %}"
          style="font-weight: {{ section.settings.heading_weight }};{% if section.settings.heading_color != blank %} color: {{ section.settings.heading_color }}{% endif %}"
        >
          {{ section.settings.heading }}
        </{{ section.settings.heading_tag }}>
      {% endif %}
      <div class="list-multi_icon_text">
        {% for block in section.blocks %}
          <div class="item-multi_icon_text">
            <div class="icon-multi_icon_text">
              <div class="icon_wrapper-multi_icon_text{% if block.settings.icon == blank %} empty{% endif %}">
                {% if block.settings.icon != blank %}
                  {%- assign widths = '165, 360, 535, 750, 1070, 1500' -%}
                  {%- capture sizes -%}
                  (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
                  (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
              {%- endcapture -%}
                  {{
                    block.settings.icon
                    | image_url: width: 1500
                    | image_tag: sizes: sizes, widths: widths, fetchpriority: fetch_priority
                  }}
                {% endif %}
              </div>
            </div>
            <div class="content-multi_icon_text">
              {% if block.settings.heading != blank %}
                <{{ section.settings.item_heading_tag }}
                  class="subheading-multi_icon_text {{ section.settings.item_heading_size }}{% if section.settings.item_heading_second_font %} second-font{% endif %}"
                  style="font-weight: {{ section.settings.item_heading_weight }};{% if section.settings.item_heading_color != blank %} color: {{ section.settings.item_heading_color }}{% endif %}"
                >
                  {{ block.settings.heading }}
                </{{ section.settings.item_heading_tag }}>
              {% endif %}
              {% if block.settings.text != blank %}
                <div
                  class="text-multi_icon_text rte{% if section.settings.item_textsecond_font %} second-font{% endif %}"
                  {% if section.settings.item_text_color != blank %}
                    style="color: {{ section.settings.item_text_color }}"
                  {% endif %}
                >
                  {{ block.settings.text }}
                </div>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
